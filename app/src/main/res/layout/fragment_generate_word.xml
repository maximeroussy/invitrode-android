<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
  <data>
    <variable name="viewModel" type="com.maximeroussy.invitrode.generateword.GenerateWordViewModel"/>
  </data>
  <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <TextView
        android:id="@+id/generated_word"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:textSize="28sp"
        android:text="@{viewModel.generatedWord}"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/generate_word_button"
        tools:text="Invitrode"
        />

    <TextView
        android:id="@+id/specify_length_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/specify_word_length"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/generated_word"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <CheckBox
        android:id="@+id/specify_length_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/length_seekbar"
        app:layout_constraintTop_toBottomOf="@+id/specify_length_label"
        />

    <SeekBar
        android:id="@+id/length_seekbar"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/specify_length_checkbox"
        app:layout_constraintTop_toBottomOf="@+id/specify_length_label"
        />

    <Button
        android:id="@+id/generate_word_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/generate"
        android:textSize="16sp"
        android:onClick="@{() -> viewModel.generateNewWord()}"
        style="@style/Base.TextAppearance.AppCompat.Widget.Button.Colored"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

  </android.support.constraint.ConstraintLayout>
</layout>
